include ../header/header
include ../breadcrumb/breadcrumb
include ../detail-card/detail-card
include ../detail-tabs/detail-tabs
include ../block-products/block-products
include ../toTop/toTop
include ../footer/footer

mixin detail()
	+b('body')
		+b('section').page.content__
			+header()
			div.container.container_type_main
				+breadcrumb()
				+e('section').card
					+detail-card()

				+e('section').card
					+detail-tabs()

				+toTop()

			+footer()

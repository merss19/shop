mixin detail-tabs()
	+b.detail-tabs
		+e('ul').list.clearfix.js-tabs.tabs-main__
			+e('li').item
				+e('a').link.js-tabs__item.active(data-id= '#options') Характеристики
			+e('li').item
				+e('a').link.js-tabs__item(data-id = '#reviews') Отзывы
				+e.notice 5
			+e('li').item
				+e('a').link.js-tabs__item(data-id = '#faq') Вопросы и ответы
				+e.notice 9
		+e.content.js-tabs__content
			+e.item.js-tabs__box.clearfix.active#options
				+e.boxes
					each item in detail.options
						+e.box
							+e.title=item.title
							+e.metrics.table
								each val in item.items
									+e.row.table-row
										+e.cell_type_value=val.option
										+e.cell=val.value
				+e.recent.block-products__
					+e.title_type_aside Вы недавно смотрели
					+e.content
						+e('ul').list.clearfix
							each item in products.best
								+e('li').item
									+product(item)
